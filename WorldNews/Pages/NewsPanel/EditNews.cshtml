@page "{id}"
@model WorldNews.Pages.NewsPanel.EditNewsModel
@{
}
<div class="container p-5">
    <div class="card mx-3 mt-n5 shadow-lg" style="border-radius: 10px; border-left:8px #007bff solid; border-right: none; border-top:none; border-bottom:none">
        <div class="card-body">
            <h4 class="card-title mb-3 text-primary text-uppercase">Edit News</h4>
            <form method="post" enctype="multipart/form-data">
                <input hidden asp-for="news.NewsId" />
                <input hidden asp-for="news.UserId" />
                <input hidden asp-for="news.SectionId" />
                <div class="row">
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input asp-for="news.NewsTitle" type="text" class="form-control" id="floatingTextInput1" placeholder="Title">
                            <span asp-validation-for="news.NewsTitle"></span>
                        </div>
                    </div>
                    <div class="col">
                        <select class="form-control form-control-md" asp-for="newsSectionId">
                            @foreach (var s in Model.sections)
                            {
                                <option value="@s.SectionId">@s.SectionName</option>
                            }
                        </select>
                        <span asp-validation-for="news.SectionId"></span>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="news.NewsDescription" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    <span asp-validation-for="news.NewsDescription"></span>
                </div>
                <div class="form-floating mb-3">
                    <div class="custom-file">
                        <input type="text" hidden asp-for="selectedNews.NewsImage" class="custom-file-input" id="validatedCustomFile">
                        <input type="file" asp-for="news.NewsImage" class="custom-file-input" id="validatedCustomFile">
                        <label class="custom-file-label" for="validatedCustomFile">News Image </label>
                        <span asp-validation-for="news.NewsImage"></span>
                    </div>
                </div>
                <div class="form-check form-switch mb-3">
                    <input asp-for="news.BreakingNews" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                    <label class="form-check-label" for="flexSwitchCheckChecked">Breaking News</label>
                    <span asp-validation-for="news.BreakingNews"></span>
                </div>
                <div class="form-check form-switch mb-3">
                    <input asp-for="news.HighlightNews" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                    <label class="form-check-label" for="flexSwitchCheckChecked">Highlight News</label>
                    <span asp-validation-for="news.HighlightNews"></span>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>