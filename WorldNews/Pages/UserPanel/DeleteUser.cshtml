@page "{id}"
@model WorldNews.Pages.UserPanel.DeleteUserModel
@{
}

<div class="container p-5">
    <div class="card mx-3 mt-n5 shadow-lg" style="border-radius: 10px; border-left:8px #e74a3b solid; border-right: none; border-top:none; border-bottom:none">
        <div class="card-body">
            <h4 class="card-title mb-3 text-danger text-uppercase">Edit User</h4>

            <form method="post">
                <input hidden asp-for="user.UserId" />
                <div class="row">
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input disabled type="text" asp-for="user.UserName" class="form-control" id="floatingTextInput1" placeholder="Username">
                            <span asp-validation-for="user.UserName"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input disabled type="text" asp-for="user.Password" class="form-control" id="floatingTextInput1" placeholder="Password">
                            <span asp-validation-for="user.Password"></span>
                        </div>
                    </div>
                </div>
                <div class="form-check form-switch mb-3">
                    <input disabled class="form-check-input" asp-for="user.IsAdmin" type="checkbox" id="flexSwitchCheckChecked">
                    <label class="form-check-label" for="flexSwitchCheckChecked">Admin</label>
                    <span asp-validation-for="user.IsAdmin"></span>
                </div>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>